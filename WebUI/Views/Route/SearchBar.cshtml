@model WebUI.Models.SearchViewModel

@{
    Layout = null;
}

<div class="search-bar">
    @using (Html.BeginForm("FindRoutes", "Route", FormMethod.Post))
    { 
        <span>From: </span><input class="searchbar-input" type="text" name="StationFrom" id="StationFrom" data-autocomplete-source='@Url.Action("AutocompleteRouteSearch", "Route")' />
        <span>To: </span><input class="searchbar-input" type="text" name="StationTo" id="StationTo" data-autocomplete-source='@Url.Action("AutocompleteRouteSearch", "Route")' />

        <input class="search-button" type="submit" value="SEARCH" />
    }
    <link  type="text/css" rel="stylesheet" href="~/Content/Site.css" />
    <script src='@Url.Content("~/Scripts/jquery-3.1.1.min.js")' type="text/javascript"></script>
    <script src='@Url.Content("~/Scripts/jquery-ui-1.12.1.min.js")' type="text/javascript"></script>

    <script type="text/javascript">
        $(function () {
            $("[data-autocomplete-source]").each(function () {
                var target = $(this);
                target.autocomplete({ source: target.attr("data-autocomplete-source") });
            });
        });
    </script>
</div>

@Scripts.Render("~/bundles/jqueryval")
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/scripts/jquery-1.10.2.js")
@Scripts.Render("~/scripts/jquery.unobtrusive-ajax.js")
